<p id="notice"><%= notice %></p>

<h1>Departamentos</h1>

<table class="table table-border table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nome %></td>
        <td><%= link_to 'Ver produtos', departamento, class: "btn btn-default"%></td>
        <td><%= link_to 'Editar produto', edit_departamento_path(departamento), class: "btn btn-default" %></td>
        <td><%= link_to 'Excluir', departamento, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar novo departamento', new_departamento_path, class: "btn btn-default" %>
